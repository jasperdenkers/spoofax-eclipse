<?xml version="1.0" encoding="UTF-8"?>
<feature
  id="org.metaborg.spoofax.eclipse.meta.feature"
  plugin="org.metaborg.spoofax.eclipse.meta"
  version="1.5.0.qualifier"
  label="Spoofax Eclipse meta-tooling"
>
  <requires>
    <import plugin="org.eclipse.ui"/>
    <import plugin="org.eclipse.core.runtime"/>
    <import plugin="org.eclipse.core.resources"/>
    <import plugin="org.eclipse.ant.core"/>
    <import plugin="org.eclipse.ui.console"/>
    <import plugin="org.eclipse.jface"/>
    <import plugin="org.eclipse.ui.workbench"/>
    <import plugin="org.eclipse.ui.ide"/>
    <import plugin="org.apache.ant" version="1.9.2" match="greaterOrEqual"/>
  </requires>

  <includes
    id="org.metaborg.spoofax.eclipse.feature"
    version="1.5.0.qualifier"
    search-location="both"
  />

  <!-- Spoofax meta-tooling -->
  <plugin
    id="org.metaborg.spoofax.meta.core"
    version="1.5.0.qualifier"
    unpack="false"
  />
  <plugin
    id="org.metaborg.spoofax.eclipse.meta"
    version="1.5.0.qualifier"
    unpack="false"
  />

